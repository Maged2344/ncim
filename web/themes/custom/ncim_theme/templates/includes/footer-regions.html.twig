{#
/**
 * @file
 * Footer template using 5 separate regions.
 * Columns 1-3: Menu blocks
 * Column 4: Custom social media block
 * Bottom: Terms menu + static copyright
 * Maintains exact same design as original footer.
 */
#}
<footer class="py-7 bg-neutral-50">
  <div class="outer-container">
    <!-- Main Footer Columns -->
    <div class="row row-cols-lg-4 row-cols-md-2 mb-8 g-4">
      <!-- Column 1: Overview Menu -->
      <div>
        {% if page.footer_column_1 %}
          {{ page.footer_column_1 }}
        {% endif %}
      </div>
      
      <!-- Column 2: Help & Support Menu -->
      <div>
        {% if page.footer_column_2 %}
          {{ page.footer_column_2 }}
        {% endif %}
      </div>
      
      <!-- Column 3: Important Links Menu -->
      <div>
        {% if page.footer_column_3 %}
          {{ page.footer_column_3 }}
        {% endif %}
      </div>
      
      <!-- Column 4: Social Media & Accessibility Custom Block -->
      <div>
        {% if page.footer_column_4 %}
          {{ page.footer_column_4 }}
        {% endif %}
      </div>
    </div>

    <!-- Bottom Section: Terms Menu + Copyright -->
    {% if page.footer_bottom %}
      {{ page.footer_bottom }}
    {% endif %}

    <!-- Static Copyright Section - Exact same as original -->
    <div class="d-flex justify-content-sm-between justify-content-center flex-column flex-sm-row align-items-center flex-wrap gap-3">
      <div>
        <h4 class="fs-18 text-default fw-600">
          {{ 'جميع الحقوق محفوظة للمركز الوطني للرقابة والتفتيش ©'|t }}
          <span class="year" data-year="{{ "now"|date("Y") }}"></span>
        </h4>
        <div class="text-default">{{ 'تاريخ آخر تعديل:'|t }} <span id="latest-modifiedDate">14/12/2020</span></div>
      </div>
      <div class="d-flex gap-3 align-items-center">
        <img src="{{ base_path ~ directory }}/images/Saudi_Vision.png" alt="{{ 'Saudi Vision'|t }}" title="{{ 'Saudi Vision'|t }}">
        <img src="{{ base_path ~ directory }}/images/registered.png" alt="{{ 'registered'|t }}" title="{{ 'registered'|t }}">
      </div>
    </div>
  </div>
</footer>
