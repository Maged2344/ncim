/**
 * Implements hook_help().
 */
function ncim_blocks_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.ncim_blocks':
      return '<p>' . t('Provides custom blocks for the NCIM homepage including Hero Section, Statistics Cards, News Section, and Partners Section.') . '</p>';
  }
}

