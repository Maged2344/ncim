{# Rules and Regulations Block Template #}

<section class="py-8">
  <div class="outer-container">
    <h3 class="fs-30 fw-700 mb-5">{{ 'ملفات مهمة'|t }}</h3>

    <div class="row row-cols-lg-3 g-4">
      {% for document in content.documents %}
        <div>
          <div class="card bg-neutral-50 border-0 p-md-2 h-100">
            <div class="card-body d-flex flex-column">

              {# Content area #}
              <div>
                {% if document.icon %}
                  <img src="{{ document.icon }}" 
                       alt="{{ 'document icon'|t }}" 
                       class="mb-4">
                {% else %}
                  {# Default document icon if none is uploaded #}
                  <img src="/{{ directory }}/images/icons/adobe.png" 
                       alt="{{ 'document icon'|t }}" 
                       class="mb-4">
                {% endif %}
                <h5 class="fs-18 fw-700">{{ document.title }}</h5>
              </div>

              {# Size + Actions area at bottom #}
              <div class="mt-auto">
                {% if document.file_size %}
                  <div class="d-flex align-items-center gap-1 my-4">
                    <img src="/{{ directory }}/images/icons/storage.svg" class="me-2" alt="{{ 'storage icon'|t }}">
                    <span class="text-primary-paragraph">{{ document.file_size }}</span>
                  </div>
                {% endif %}

                <div class="d-flex gap-3">
                  {% if document.file_url %}
                    <a href="{{ document.file_url }}" 
                       download
                       class="btn btn-background-neutral-default d-flex gap-2 align-items-center">
                      {{ document.download_text }}
                      <img src="/{{ directory }}/images/icons/download.svg" alt="{{ 'download icon'|t }}" />
                    </a>
                  {% endif %}
                  
                  {% if document.file_url %}
                    <a href="{{ document.file_url }}" 
                       target="_blank"
                       class="btn btn-background-neutral-default d-flex gap-2 align-items-center">
                      <img src="/{{ directory }}/images/icons/eye.svg" alt="{{ 'view icon'|t }}">
                    </a>
                  {% endif %}
                </div>
              </div>

            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    {% if content.documents is empty %}
      <div class="text-center py-5">
        <p class="text-muted">{{ 'لا توجد ملفات متاحة حالياً'|t }}</p>
      </div>
    {% endif %}
  </div>
</section>
