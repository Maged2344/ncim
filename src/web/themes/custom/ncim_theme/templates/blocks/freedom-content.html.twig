{#
/**
 * @file
 * Default theme implementation for freedom of information content.
 *
 * Available variables:
 * - content: An array of content data.
 *   - sections: Array of freedom of information sections with title, content, display_order.
 *
 * @see template_preprocess_freedom_content()
 */
#}

{% if content.sections %}
  <section class="py-6">
    <div class="outer-container">
      {% for section in content.sections %}
        <h5 class="fs-18 fw-700 mb-2">
          {{ section.title }}
        </h5>

        <div class="mb-4">
          {{ section.content|raw }}
        </div>
      {% endfor %}
    </div>
  </section>
{% else %}
  <div class="alert alert-info">
    <p>{{ 'معلومات حرية الحصول على المعلومات غير متاحة في الوقت الحالي.'|t }}</p>
  </div>
{% endif %}
