{#
/**
 * @file
 * Default theme implementation for reports content.
 *
 * Available variables:
 * - content: An array of content data.
 *   - reports: Array of report items with title, year, type, file_url, file_size, download_text.
 *
 * @see template_preprocess_reports_content()
 */
#}

{% if content.reports %}
  <section class="py-6">
    <div class="outer-container">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-rounded text-nowrap">
          <thead class="table-primary">
            <tr>
              <th style="width: 20px;"></th>
              <th>{{ 'اسم التقرير'|t }}</th>
              <th>{{ 'السنة'|t }}</th>
              <th>
                <div class="d-flex gap-3 align-items-center w-fit">
                  <div class="d-flex align-items-center gap-1">
                    <button type="button" class="btn btn-sm">
                      <img src="/themes/custom/ncim_theme/images/icons/filter.svg" alt="{{ 'تصفية'|t }}" />
                    </button>
                    <button type="button" class="btn btn-sm">
                      <img src="/themes/custom/ncim_theme/images/icons/sort.svg" alt="{{ 'ترتيب'|t }}" />
                    </button>
                  </div>
                  <div>{{ 'نوع التقرير'|t }}</div>
                </div>
              </th>
              <th style="width: 200px;">
                <div class="d-flex gap-3 align-items-center w-fit">
                  <div class="d-flex align-items-center gap-1">
                    <button type="button" class="btn btn-sm">
                      <img src="/themes/custom/ncim_theme/images/icons/filter.svg" alt="{{ 'تصفية'|t }}" />
                    </button>
                    <button type="button" class="btn btn-sm">
                      <img src="/themes/custom/ncim_theme/images/icons/sort.svg" alt="{{ 'ترتيب'|t }}" />
                    </button>
                  </div>
                  <div></div>
                </div>
              </th>
            </tr>
          </thead>
          <tbody>
            {% for report in content.reports %}
              <tr>
                <td>{{ loop.index }}</td>
                <td>{{ report.title }}</td>
                <td>{{ report.year }}</td>
                <td>{{ report.type }}</td>
                <td class="text-end">
                  {% if report.file_url %}
                    <a href="{{ report.file_url }}" class="btn btn-outline-neutral-primary text-default btn-sm" download>
                      {{ report.download_text }}
                    </a>
                  {% else %}
                    <span class="text-muted">{{ 'الملف غير متاح'|t }}</span>
                  {% endif %}
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </section>
{% else %}
  <div class="alert alert-info">
    <p>{{ 'لا توجد تقارير سنوية متاحة في الوقت الحالي.'|t }}</p>
  </div>
{% endif %}
